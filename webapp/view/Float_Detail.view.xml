<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="ZEFORM.PettyCash.controller.Float_Detail"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form">
	<App>
		<pages>
			<Page enableScrolling="false" showHeader="false">
				<content>
					<ObjectHeader backgroundDesign="Translucent" fullScreenOptimized="true" responsive="true" titleLevel="H6" titleActive="true"
						titlePress="handleTitlePress" busyIndicatorDelay="0" title="">
						<ObjectAttribute title="Float Admin Party" text=""></ObjectAttribute>
						<ObjectAttribute title="Float Description"/>
						<ObjectAttribute title="Float Amount" text=""/>
						<ObjectAttribute title="Checker(s)" text=""/>
						<ObjectAttribute title="Custodian(s)" text=""/>
						<ObjectAttribute title="Default Cost Ctr / Proj / IO" text=""/>
						<statuses>
							<ObjectStatus title="Status" text="{PC>/Statustext}"/>
							<ObjectStatus title="Created By" text=""/>
							<ObjectStatus title="Created On" text=""/>
							<ObjectStatus title="Last Replenishment Date" text=""/>
							<ObjectStatus title="Last Petty Cash Confirmation Date" text=""/>
							<!--<ObjectStatus title="" id="forwardedPerson"/>-->
						</statuses>
					</ObjectHeader>
					<Table id="itemTable1" updateFinished="refreshTotal" items="{path: '/PCHEADTODEBIT',length:1000,templateShareable:false}">
						<headerToolbar>
							<OverflowToolbar>
								<content>
									<Title text="Float Additions / Reductions" level="H2"/>
									<Button text="Float Additions / Reductions" type="Emphasized" press="openFloatDialog"/>
									<Button text="Upload Document" type="Emphasized"/>
									<Button text="Cancel Float" type="Emphasized"/>
								</content>
							</OverflowToolbar>
						</headerToolbar>
						<columns>
							<Column width="6rem">
								<Label text="Item No."/>
							</Column>
							<Column width="5rem">
								<Text text="Curr."/>
							</Column>
							<Column width="6rem">
								<Label text="Amount"/>
								<footer>
									<Text class="sapMInputBaseInner" textAlign="Right"
										text="{path: 'PC>/Tolamt1', type:'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 }}"
										tooltip="The total amount of all line items under Charging Information (Debit)."/>
								</footer>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text=""/>
									<Text text=""/>
									<Text text="Amount"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
			<Page>
				<Dialog id="FloatDialog" title="Create Float" contentWidth="650px">
					<content>
						<l:Grid class="sapUiSmallMargin" defaultSpan="XL12 L12 M12 S12">
							<VBox>
								<layoutData >
									<l:GridData span="XL12 L12 M12 S12"/>
								</layoutData>
								<form:SimpleForm layout="ResponsiveGridLayout">
									<Label text="Amount" required="true">
										<layoutData>
											<l:GridData span="XL6 L6 M6 S6"/>
										</layoutData>
									</Label>
									<Input required="true">
										<layoutData>
											<l:GridData span="XL6 L6 M6 S6"/>
										</layoutData>
									</Input>
									<Label text="Request Date">
										<layoutData>
											<l:GridData span="XL6 L6 M6 S6"/>
										</layoutData>
									</Label>
									<Input required="true">
										<layoutData>
											<l:GridData span="XL6 L6 M6 S6"/>
										</layoutData>
									</Input>
									<Label text="Posting Date">
										<layoutData>
											<l:GridData span="XL6 L6 M6 S6"/>
										</layoutData>
									</Label>
									<Input >
										<layoutData>
											<l:GridData span="XL6 L6 M6 S6"/>
										</layoutData>
									</Input>
									<Label text="Reference">
										<layoutData>
											<l:GridData span="XL6 L6 M6 S6"/>
										</layoutData>
									</Label>
									<Input>
										<layoutData>
											<l:GridData span="XL6 L6 M6 S6"/>
										</layoutData>
									</Input>
									<Label text="Header Text">
										<layoutData>
											<l:GridData span="XL6 L6 M6 S6"/>
										</layoutData>
									</Label>
									<Input>
										<layoutData>
											<l:GridData span="XL6 L6 M6 S6"/>
										</layoutData>
									</Input>
									<Label text="Item text">
										<layoutData>
											<l:GridData span="XL6 L6 M6 S6"/>
										</layoutData>
									</Label>
									<Input>
										<layoutData>
											<l:GridData span="XL6 L6 M6 S6"/>
										</layoutData>
									</Input>
									<Label text="Assignment">
										<layoutData>
											<l:GridData span="XL6 L6 M6 S6"/>
										</layoutData>
									</Label>
									<Input>
										<layoutData>
											<l:GridData span="XL6 L6 M6 S6"/>
										</layoutData>
									</Input>
								</form:SimpleForm>
							</VBox>
						</l:Grid>
					</content>
					<buttons>
						<Button text="Post" press="prepare"/>
						<Button text="Cancel" press="cancelFloatDialog"/>
					</buttons>
				</Dialog>
			</Page>
			
		</pages>
	</App>
</mvc:View>